/**
 * @description This ruleset provides public read access to notifications, course materials, and assignments,
 * allowing any user to view these resources. Write access (create, update, delete) is disabled to protect
 * data integrity, as these collections are intended to be managed by authorized personnel only.
 * @data_structure
 * - /notifications/{notificationId}
 * - /course_materials/{courseMaterialId}
 * - /assignments/{assignmentId}
 * @key_security_decisions
 * - Public read access for all collections.
 * - Write access is disabled on all collections to prevent unauthorized modifications.
 */
rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    /**
     * @description Allows anyone to read notifications. Write operations are disabled.
     * @path /notifications/{notificationId}
     * @allow (get, list) Anyone can read notifications.
     * @deny (create, update, delete) No one can create, update, or delete notifications through client-side rules.
     * @principle Provides public read access to notifications, while preventing unauthorized data modification.
     */
    match /notifications/{notificationId} {
      allow get, list: if true;
      allow create, update, delete: if false;
    }

    /**
     * @description Allows anyone to read course materials. Write operations are disabled.
     * @path /course_materials/{courseMaterialId}
     * @allow (get, list) Anyone can read course materials.
     * @deny (create, update, delete) No one can create, update, or delete course materials through client-side rules.
     * @principle Provides public read access to course materials, while preventing unauthorized data modification.
     */
    match /course_materials/{courseMaterialId} {
      allow get, list: if true;
      allow create, update, delete: if false;
    }

    /**
     * @description Allows anyone to read assignments. Write operations are disabled.
     * @path /assignments/{assignmentId}
     * @allow (get, list) Anyone can read assignments.
     * @deny (create, update, delete) No one can create, update, or delete assignments through client-side rules.
     * @principle Provides public read access to assignments, while preventing unauthorized data modification.
     */
    match /assignments/{assignmentId} {
      allow get, list: if true;
      allow create, update, delete: if false;
    }
  }
}