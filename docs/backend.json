{
  "entities": {
    "Notification": {
      "$schema": "http://json-schema.org/draft-07/schema#",
      "title": "Notification",
      "type": "object",
      "description": "Represents a notification to be displayed to users.",
      "properties": {
        "title": {
          "type": "string",
          "description": "Title of the notification."
        },
        "description": {
          "type": "string",
          "description": "Detailed description of the notification."
        },
        "date": {
          "type": "string",
          "description": "Date when the notification was created or posted.",
          "format": "date-time"
        },
        "submitted": {
          "type": "boolean",
          "description": "Boolean that denotes whether the notification represents assignment submission."
        },
        "submissionDate": {
          "type": "string",
          "description": "The date the assignment was submitted.",
          "format": "date-time"
        }
      },
      "required": [
        "title",
        "description",
        "date"
      ]
    },
    "CourseMaterial": {
      "$schema": "http://json-schema.org/draft-07/schema#",
      "title": "CourseMaterial",
      "type": "object",
      "description": "Represents a course material file uploaded to the system.",
      "properties": {
        "subject": {
          "type": "string",
          "description": "Subject category of the course material (e.g., Statistics, Physics)."
        },
        "filename": {
          "type": "string",
          "description": "Original filename of the uploaded file."
        },
        "fileUrl": {
          "type": "string",
          "description": "URL where the file is stored (e.g., Catbox URL).",
          "format": "uri"
        },
        "fileType": {
          "type": "string",
          "description": "MIME type of the uploaded file (e.g., application/pdf, image/jpeg)."
        },
        "uploadDate": {
          "type": "string",
          "description": "Date when the file was uploaded.",
          "format": "date-time"
        }
      },
      "required": [
        "subject",
        "filename",
        "fileUrl",
        "fileType",
        "uploadDate"
      ]
    },
    "Assignment": {
      "$schema": "http://json-schema.org/draft-07/schema#",
      "title": "Assignment",
      "type": "object",
      "description": "Represents an assignment for a course.",
      "properties": {
        "title": {
          "type": "string"
        },
        "description": {
          "type": "string"
        },
        "subject": {
          "type": "string"
        },
        "deadline": {
          "type": "string",
          "format": "date-time"
        },
        "fileUrl": {
          "type": "string",
          "format": "uri"
        },
        "fileType": {
          "type": "string"
        },
        "filename": {
          "type": "string"
        },
        "date": {
          "type": "string",
          "format": "date-time"
        },
        "answerFileUrl": {
          "type": "string",
          "format": "uri"
        },
        "answerFileType": {
          "type": "string"
        },
        "answerFilename": {
          "type": "string"
        },
        "submitted": {
          "type": "boolean"
        },
        "submissionDate": {
          "type": "string",
          "format": "date-time"
        }
      },
      "required": [
        "title",
        "description",
        "subject",
        "deadline",
        "fileUrl",
        "fileType",
        "filename",
        "date"
      ]
    }
  },
  "auth": {
    "providers": [
      "password"
    ]
  },
  "firestore": {
    "collections": [
      {
        "path": "/notifications/{notificationId}",
        "schema": {
          "$ref": "#/entities/Notification"
        }
      },
      {
        "path": "/course_materials/{courseMaterialId}",
        "schema": {
          "$ref": "#/entities/CourseMaterial"
        }
      },
      {
        "path": "/assignments/{assignmentId}",
        "schema": {
          "$ref": "#/entities/Assignment"
        }
      }
    ]
  }
}
